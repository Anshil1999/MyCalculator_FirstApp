<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="100">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:textSize="60sp"
        android:textStyle="bold"
        android:gravity="bottom|end"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="80"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:weightSum="4"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"

                android:orientation="horizontal">

                <Button
                    android:background="@drawable/colourchange"
                    android:id="@+id/b7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="80dp"/>

                <Button
                    android:background="@color/colorAccent"
                    android:id="@+id/b8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="80dp" />
                <Button
                    android:background="@color/colorAccent"
                    android:id="@+id/b9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="80dp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"

                android:orientation="horizontal"
            android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:background="@color/colorAccent"
                    android:id="@+id/b4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="80dp"/>

                <Button
                    android:background="@color/colorAccent"
                    android:id="@+id/b5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="80dp"/>
                <Button
                    android:background="@color/colorAccent"
                    android:id="@+id/b6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="80dp"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:weightSum="3"
                android:orientation="horizontal"
            android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:background="@color/colorAccent"
                    android:id="@+id/b1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="80dp"/>
                <Button
                    android:background="@color/colorAccent"
                    android:id="@+id/b2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="80dp"/>
                <Button
                    android:background="@color/colorAccent"
                    android:id="@+id/b3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="80dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:orientation="horizontal"
            android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/bc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="C"
                    android:layout_margin="5dp"
                    android:textSize="80dp"/>

                <Button
                    android:background="@color/colorAccent"
                    android:id="@+id/b0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="80dp"/>
                <Button
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/dot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="."
                    android:layout_margin="5dp"
                    android:textSize="80dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:weightSum="6"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="#8AEE0000">

            <Button
                android:background="@color/colorPrimaryDark"
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.125"
                android:text="+"
                android:textSize="70dp"/>
            <Button
                android:background="@color/colorPrimaryDark"
                android:id="@+id/sub"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.125"
                android:text="-"
                android:textSize="70dp"/>
            <Button
                android:background="@color/colorPrimaryDark"
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.125"
                android:text="*"
                android:textSize="70dp"/>
            <Button
                android:background="@color/colorPrimaryDark"
                android:id="@+id/divide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.125"
                android:text="/"
                android:textSize="70dp"/>
            <Button
                android:background="@color/colorPrimaryDark"
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="="
                android:textSize="80dp" />




        </LinearLayout>
    </LinearLayout>


</LinearLayout>
</RelativeLayout>
